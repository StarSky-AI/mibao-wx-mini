.form-content {
  background: #fff;
  padding: 30rpx;
}
.form-content .form-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  padding: 20rpx 0;
}
.form-content .form-row .row-main {
  flex: 1;
}
.form-content .form-row .row-aside {
  padding: 0 20rpx;
}
.form-content .form-row .label {
  font-size: 26rpx;
  color: #888;
}
.form-content .form-row .input-wp {
  font-size: 28rpx;
  padding: 10rpx 0;
  height: 30rpx;
  line-height: 30rpx;
  color: #333;
}
.form-content .form-row .input-wp > input {
  width: 100%;
  height: 100%;
  border: none;
  outline: none;
}
.form-content .form-row .input-wp > input:active,
.form-content .form-row .input-wp > input:focus {
  outline: none;
}
.form-content .form-row .aside-btn {
  color: #3795FF;
  border: 1px solid #3795FF;
  font-size: 24rpx;
  width: 160rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 48rpx;
  overflow: hidden;
  background: #fff;
}
.form-content .form-row .aside-btn.disabled {
  border-color: #EAEAEA;
  color: #EAEAEA;
}
.form-content .form-row .captcha-wp {
  width: 250rpx;
  max-height: 100rpx;
  overflow: hidden;
}
.form-content .form-row .captcha-wp > image {
  width: 100%;
  height: auto;
}
.form-content .form-row + .form-row {
  border-top: 1px solid #EAEAEA;
}
.footer-button-wp {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 80rpx 40rpx;
}
.footer-button-wp .button {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  background: #3795FF;
  font-size: 32rpx;
  border-radius: 88rpx;
  overflow: hidden;
}
.footer-button-wp .button:active,
.footer-button-wp .button:focus {
  background: #047aff;
}
.footer-button-wp .button.disabled {
  background: #EAEAEA;
}
