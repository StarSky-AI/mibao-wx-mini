/* pages/personal/service/service.wxss */
.content {
	position: fixed;
	top: 20rpx;
	bottom: 0rpx;
	left: 30rpx;
	right: 30rpx;
	height: 100%;
	background-color: #fff;
}
.banner {
	width: 100%;
	background-color: #fff;
	position: relative;
}
.banner .text1 {
	position: absolute;
	left: 40rpx; top: 100rpx;
	font-size: 50rpx;
	line-height: 72rpx;
	font-family: "微软雅黑";
	color: #D0D1DB;
	text-shadow: 0 2px 4px rgba(0,0,0,0.50);
}
.banner .text2 {
	position: absolute;
	left: 40rpx; top: 172rpx;
	font-size: 48rpx;
	line-height: 66rpx;
	color: #D0D1DB;
	text-shadow: 0 2px 4px rgba(0,0,0,0.50);
}
.banner .text3 {
	position: absolute;
	left: 40rpx; top: 244rpx;
	opacity: 0.2;
	font-size: 26rpx;
	color: #FFFFFF;
	letter-spacing: 6.16px;
	text-align: left;
	text-shadow: 0 0 3px rgba(0,0,0,0.50);
}
.body .item {
	width: 100%;
	display: flex;
	text-align: center;
	flex-direction: column;
	background-color: #fff;
}
.item view {
	display: flex;
	justify-content: center;
}
.item view:nth-child(1) image {
	margin-top: 74rpx;
	width: 40rpx;
	height: 10rpx;
}
.item view:nth-child(1) .left, .item view:nth-child(4) .left {
	margin-right: 14rpx;
}
.item view:nth-child(1) .right, .item view:nth-child(4) .right {
	margin-left: 14rpx;
}
.item view:nth-child(1) text {
	font-size: 32rpx;
	color: #9B9B9B;
	line-height: 44rpx;
	margin-top: 56rpx;
}
.item view:nth-child(2) text {
	font-size: 40rpx;
	line-height: 56rpx;
	margin-top: 22rpx;
	font-family: "黑体";
}
.item view:nth-child(4) image {
	margin-top: 84rpx;
	width: 40rpx;
	height: 10rpx;
}
.item view:nth-child(3) text {
	font-size: 24rpx;
	line-height: 34rpx;
	margin-top: 4rpx;
	color: #9B9B9B;
}
.item view:nth-child(4) text {
	font-size: 32rpx;
	line-height: 44rpx;
	margin-top: 64rpx;
	color: #9B9B9B;
}
.body .calliphone {
	display: flex;
	flex-direction: column;
}
.body .calliphone .num{
	font-size: 40rpx;
	line-height: 56rpx;
	font-family: "黑体";
	color: #000;
	margin-top: 9rpx;
}
.body .calliphone .call {
	
	font-size: 24rpx;
	line-height: 34rpx;
	margin-top: 2rpx;
	font-family: "黑体";
	color: #2395FF;
	text-decoration:underline;
}
.online {
	display: flex;
	height: 80rpx;
	margin-top: 134rpx;
	margin-bottom: 130rpx;
	justify-content: center;
}
.online button {
	width: 630rpx;
	height: 80rpx;
	line-height: 80rpx;
	font-size: 32rpx;
	color: #fff;
	background: #2395FF;
	border-radius: 33px;
	text-align: center;
}