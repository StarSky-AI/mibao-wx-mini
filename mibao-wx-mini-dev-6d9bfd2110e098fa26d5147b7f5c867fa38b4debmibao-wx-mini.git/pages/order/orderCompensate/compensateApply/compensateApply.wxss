.compensateApply .header {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 96rpx;
  padding: 0 30rpx;
  background: #fff;
}
.compensateApply .header .name {
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 32rpx;
  color: #000000;
}
.compensateApply .header .contact {
  width: 160rpx;
  height: 48rpx;
}
.compensateApply .header .contact image {
  width: 100%;
  height: 100%;
}
.compensateApply .order-product-wp {
  margin-bottom: 20rpx;
}
.compensateApply .order-product-wp .product-header {
  margin: 0;
}
.compensateApply .compensateReason-wp {
  margin-bottom: 20rpx;
  height: 146rpx;
  padding: 30rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.compensateApply .compensateReason-wp .title {
  font-size: 26rpx;
  color: #9B9B9B;
}
.compensateApply .compensateReason-wp .choose {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  overflow: hidden;
}
.compensateApply .compensateReason-wp .choose .left {
  flex: 1;
  font-size: 28rpx;
  color: #041D29;
}
.compensateApply .compensateReason-wp .choose .right .iconfont {
  color: #999999;
}
.compensateApply .des-wp {
  padding: 0 30rpx;
  padding-bottom: 40rpx;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
}
.compensateApply .note {
  padding: 20rpx 30rpx 180rpx ;
  font-size: 24rpx;
  color: #9B9B9B;
}
.compensateApply .submit {
  background: #FFFFFF;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.compensateApply .submit button {
  height: 100%;
  text-align: center;
  background: #2395FF;
  border-radius: 66rpx;
  color: #FFFFFF;
  width: 100%;
  font-size: 32rpx;
}
.compensateApply .successcontent {
  width: 100%;
  background: #FFFFFF;
  height: 330px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.compensateApply .successcontent .iconfont {
  margin-top: 120rpx;
  font-size: 160rpx;
  color: #2395FF ;
}
.compensateApply .successcontent .line1 {
  margin-top: -35rpx;
  font-size: 32rpx;
  color: #434343;
  margin-bottom: 8rpx;
}
.compensateApply .successcontent .line2 {
  font-size: 24rpx;
  color: #9B9B9B;
  margin-bottom: 144rpx;
}
.compensateApply .successcontent .backToHome {
  font-size: 24rpx;
  color: #2395FF;
}
.compensateApply .successcontent .backToHome .iconfont {
  color: #2395FF;
  font-size: 24rpx;
}
