.out_wp {
  background-color: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.wp {
  padding: 10rpx 0;
  border-bottom: 1px solid #EAEAEA;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.wp .left {
  font-size: 28rpx;
  color: #000;
  font-family: PingFangSC-Regular;
}
.wp .left .ease {
  color: #9B9B9B;
}
.wp .left .daifu {
  color: #434343;
}
.wp .left .max {
  color: #000;
}
.wp .left .min {
  font-size: 24rpx;
}
.wp .right {
  width: 120rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  background: #3795FF;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #FFF;
  font-family: PingFangSC-Regular;
}
.tips {
  font-size: 24rpx;
  color: #999;
}
