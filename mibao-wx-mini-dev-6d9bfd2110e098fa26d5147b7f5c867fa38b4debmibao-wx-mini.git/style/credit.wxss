.credit-form {
  background: #fff;
  padding: 30rpx;
}
.credit-form .form-header {
  padding: 20rpx 0;
}
.credit-form .form-header .title {
  font-size: 44rpx;
  color: #333;
  margin-bottom: 20rpx;
}
.credit-form .form-header .desc {
  font-size: 28rpx;
  color: #333;
}
.credit-form .form-header .important {
  font-size: 24rpx;
  color: #FF5339;
}
.credit-form .form-content .form-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  padding: 20rpx 0;
}
.credit-form .form-content .form-row .row-main {
  flex: 1;
}
.credit-form .form-content .form-row .row-aside {
  padding: 0 20rpx;
}
.credit-form .form-content .form-row .label {
  font-size: 26rpx;
  color: #888;
}
.credit-form .form-content .form-row .input-wp {
  font-size: 28rpx;
  padding: 10rpx 0;
  height: 30rpx;
  line-height: 30rpx;
  color: #333;
}
.credit-form .form-content .form-row .input-wp > input {
  width: 100%;
  height: 100%;
  border: none;
  outline: none;
}
.credit-form .form-content .form-row .input-wp > input:active,
.credit-form .form-content .form-row .input-wp > input:focus {
  outline: none;
}
.credit-form .form-content .form-row .aside-btn {
  color: #3795FF;
  border: 1px solid #3795FF;
  font-size: 24rpx;
  width: 160rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 48rpx;
  overflow: hidden;
  background: #fff;
}
.credit-form .form-content .form-row .aside-btn.disabled {
  border-color: #EAEAEA;
  color: #EAEAEA;
}
.credit-form .form-content .form-row .captcha-wp {
  width: 250rpx;
  max-height: 100rpx;
  overflow: hidden;
}
.credit-form .form-content .form-row .captcha-wp > image {
  width: 100%;
  height: auto;
}
.credit-form .form-content .form-row + .form-row {
  border-top: 1px solid #EAEAEA;
}
.credit-footer-tip {
  padding: 30rpx;
  color: #a3a3a3;
  font-size: 24rpx;
}
